<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.LoginActivity">

    <LinearLayout
        android:id="@+id/employeeIdLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_enter_employee_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/enter_employee_id"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_enter_employee_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

        <ImageButton
            android:id="@+id/img_btn_continue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:rotation="180"
            android:src="?attr/actionModeCloseDrawable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton"
                    android:text="@string/levo"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="64sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:fontFamily="@font/aguafina_script"
                    android:text="@string/sonus"
                    android:textColor="@android:color/black"
                    android:textSize="36sp" />
            </FrameLayout>


            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="8dp"
                android:background="@drawable/circle"
                android:src="@drawable/takeoff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/employeeIdLayout"
        >
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:id="@+id/one"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:padding="24dp"
                    android:gravity="center"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/one"
                    android:textSize="36sp"/>
                <TextView
                    android:id="@+id/two"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/two"
                    android:textSize="36sp"/>
                <TextView
                    android:id="@+id/three"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:padding="24dp"
                    android:gravity="center"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/three"
                    android:textSize="36sp"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:id="@+id/four"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/four"
                    android:textSize="36sp"/>
                <TextView
                    android:id="@+id/five"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/five"
                    android:textSize="36sp"/>
                <TextView
                    android:id="@+id/six"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/six"
                    android:textSize="36sp"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:id="@+id/seven"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/seven"
                    android:textSize="36sp"/>
                <TextView
                    android:id="@+id/eight"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/eight"
                    android:textSize="36sp"/>
                <TextView
                    android:id="@+id/nine"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/nine"
                    android:textSize="36sp"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/zero"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:text="@string/zero"
                    android:textSize="36sp"/>
            </TableRow>
        </TableLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>