<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.associateconsole.TestAudioFragment">


    <com.gauravk.audiovisualizer.visualizer.CircleLineVisualizer
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/test_audio_vizualizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintBottomtoTopof="@id/sound_btn_layout"
        custom:avDensity="0.8"
        custom:avType="fill"
        custom:avColor="@color/colorPrimary"
        custom:avSpeed="normal"/>

    <LinearLayout
        android:id="@+id/sound_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/test_audio_vizualizer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottomtoTopof="@id/progressBar"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/test_audio_greeting"
            android:textSize="36sp"
            android:textColor="@color/colorPrimary"
            />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:src="@android:drawable/ic_media_play"/>
    </LinearLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:progress="@integer/config_navAnimTime"
        app:layout_constraintTop_toBottomOf="@id/sound_btn_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottomtoTopof="@id/img_btn_continue"
        />

    <ImageButton
        android:id="@+id/img_btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:rotation="180"
        android:src="?attr/actionModeCloseDrawable"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>