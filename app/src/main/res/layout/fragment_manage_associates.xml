<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="#80FFFFFF"
    tools:context=".ui.managementconsole.manageassociates.ManageAssociatesFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/img_btn_add_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_input_add"
                android:background="@android:drawable/dialog_holo_light_frame"
                />

            <ImageButton
                android:id="@+id/img_btn_delete_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_delete"
                android:background="@android:drawable/dialog_holo_light_frame"
                />
        </LinearLayout>

    <ImageButton
        android:id="@+id/img_btn_filter_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:src="@android:drawable/ic_menu_sort_by_size" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_manage_associates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="8dp"
            />

</LinearLayout>